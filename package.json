{
  "name": "payload-convex-adapter",
  "version": "1.0.4",
  "description": "A database adapter for Payload CMS that uses Convex as the underlying database",
  "author": "Odele Technologies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/odele-tech/payload-convex-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/odele-tech/payload-convex-adapter/issues"
  },
  "homepage": "https://github.com/odele-tech/payload-convex-adapter#readme",
  "files": [
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./convex": {
      "types": "./dist/convex/index.d.ts",
      "default": "./dist/convex/index.js"
    },
    "./safe-service": {
      "types": "./dist/adapter/safe-service.d.ts",
      "default": "./dist/adapter/safe-service.js"
    }
  },
  "scripts": {
    "build": "rimraf dist && tsup",
    "release": "pnpm build && pnpm publish --access public"
  },
  "keywords": [
    "payload",
    "convex",
    "adapter",
    "database",
    "cms"
  ],
  "dependencies": {
    "@payloadcms/db-postgres": "3.73.0",
    "convex": "^1.31.6",
    "payload": "^3.73.0",
    "rimraf": "^6.1.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "specs": "workspace:*",
    "tsup": "^8.5.1"
  }
}
